# Note : user and e-mail go into gitconfig.local

[alias]
	ci = commit
	cp = commit-and-push
	co = checkout
	fp = fpush
	fo = fetch origin
	go = reset --hard
	gou = reset --hard @{u}
	lg = log --color --graph --pretty=format:'%Cgreen%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	lgs = log --graph --pretty=format:'%Cgreen%h%Creset - %s %C(yellow)%d' --abbrev-commit
	logp = log --find-renames --patch-with-stat
	logu = log @{u}
	diffu = diff @{u}
	diffo = diff origin/master
	mend = commit --amend

	pa = push-all-and-fetch
	prune-merged = !git branch --merged | grep dm/ | grep -v "\\*" | xargs -n1 git branch -d

	ck = cherry-pick
	ca = cherry-pick --abort
	cx = cherry-pick -x

	r = rebase-n-commits
	ra = rebase --abort
	rc = rebase --continue
	rcr = commit-and-rebase
	ri = rebase --interactive
	ro = rebase -i origin/master
	rs = rebase --skip
	ru = rebase -i upstream/master

	st = status --branch

[color]
	ui = auto

[diff]
	compactionHeuristic = true

[gui]
	spellingdictionary = en_US

[guitool "pull-rebase"]
	cmd = git pull --rebase

[guitool "clean"]
	cmd = git clean -fd
	confirm = yes

[guitool "reset"]
	cmd = git reset --hard
	confirm = yes

[merge]
	tool = kdiff3

[mergetool]
	keepbackup = false

[pull]
	rebase = true

[push]
	default = tracking

[rebase]
	stat = yes

[rerere]
	enabled = true

# vim: set filetype=gitconfig:
