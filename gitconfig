# Note : user and e-mail go into gitconfig.local

[alias]
	ci = commit
	ck = cherry-pick
	co = checkout
	fp = fpush
	fo = fetch origin
	go = reset --hard
	gou = reset --hard @{u}
	lg = log --color --graph --pretty=format:'%Cgreen%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	logp = log --find-renames --patch-with-stat
	logu = log @{u}
	diffu = diff @{u}
	mend = commit --amend
	# Keep it short without all the beginner's help, but still show branch
	# and don't use color
	st = status --branch

[color]
	ui = auto

[gui]
	spellingdictionary = none

[guitool "pull-rebase"]
	cmd = git pull --rebase

[guitool "clean"]
	cmd = git clean -fd
	confirm = yes

[guitool "reset"]
	cmd = git reset --hard
	confirm = yes

[merge]
	tool = kdiff3

[mergetool]
	keepbackup = false

[pull]
	rebase = true

[push]
	default = tracking

[rebase]
	stat = yes

[rerere]
	enabled = true

# vim: set filetype=gitconfig:
