#!/usr/bin/env python

import py_compile
import sys


def main():
    filepath = sys.argv[1]
    try:
        py_compile.compile(filepath, doraise=True)
    except py_compile.PyCompileError as py_compile_error:
        e = py_compile_error.args[2]
        print("{e.filename}:{e.lineno}:{e.offset}: {e.msg}".format(e=e))
        sys.exit(1)


if __name__ == "__main__":
    main()
