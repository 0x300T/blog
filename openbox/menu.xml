<?xml version="1.0" encoding="utf-8"?>
<openbox_menu xmlns="http://openbox.org/3.4/menu">
	<menu id="apps-editors-menu" label="Applications">
	</menu>

	<menu id="system-menu" label="System">
		<item label="Openbox Configuration Manager">
			<action name="Execute">
				<command>obconf</command>
				<startupnotify>
					<enabled>yes</enabled>
				</startupnotify>
			</action>
		</item>
	</menu>

	<menu id="root-menu" label="Openbox 3">
		<separator label="Applications"/>
		<item label="Term">
			<action name="Execute">
				<command>xfce4-terminal</command>
				<startupnotify>
					<enabled>yes</enabled>
					<wmclass>Terminal</wmclass>
				</startupnotify>
			</action>
		</item>
		<item label="Firefox">
			<action name="Execute">
				<command>firefox</command>
				<startupnotify>
					<enabled>yes</enabled>
					<wmclass>Firefox</wmclass>
				</startupnotify>
			</action>
		</item>
		<item label="Corebird">
			<action name="Execute">
				<command>corebird</command>
				<startupnotify>
					<enabled>yes</enabled>
					<wmclass>Corebird</wmclass>
				</startupnotify>
			</action>
		</item>
		<item label="Run ...">
			<action name="Execute">
				<command>gmrun</command>
				<startupnotify>
					<enabled>yes</enabled>
				</startupnotify>
			</action>
		</item>
		<item label="Pulseaudio">
			<action name="Execute">
				<command>pavucontrol</command>
				<startupnotify>
					<enabled>yes</enabled>
				</startupnotify>
			</action>
		</item>
		<item label="LTris">
			<action name="Execute">
				<execute>ltris</execute>
			</action>
		</item>
		<separator label="System"/>
		<item label="Log Out">
			<action name="Exit">
				<prompt>no</prompt>
			</action>
		</item>
		<item label="Suspend">
			<action name="Execute">
				<command>sudo systemctl suspend</command>
			</action>
		</item>
	</menu>
</openbox_menu>
